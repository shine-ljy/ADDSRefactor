<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.adds.mapper.QAMapper">
    <resultMap id="QAList" type="com.java.adds.entity.QAEntity">
        <id column="qid" property="qid"/>
        <result column="content" property="content"/>
        <result column="hospitalDepartmentId" property="hospitalDepartmentId"/>
        <result column="type" property="type"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <insert id="addQuestion" useGeneratedKeys="true" keyProperty="qid" parameterType="com.java.adds.entity.QAEntity">
        insert into question(content,hospitalDepartmentId,type,userid,remark)
        values (#{content},#{hospitalDepartmentId},#{type},#{userid},#{remark})
    </insert>

    <select id="searchAnswerById" resultType="java.lang.Integer">
        select resultType from questionresult where questionid=#{qid}
    </select>

    <select id="searchMyQuestion" resultMap="QAList">
        select * from question where userid=#{uid}
    </select>

    <select id="getAllQuestions" resultMap="QAList">
        select * from question
    </select>
</mapper>